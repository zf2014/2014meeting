
$wxqLeftWidth = 570px

.wxq-main
	height: 100%
	// padding-left: 50px
	// padding-right: 50px
.wxq-no-signin
	.wxq-main--left
		animation(hide-wxq-left .5s ease-out forwards)
		
	.wxq-main--right
		animation(middle-wxq-right .5s ease-out forwards .2s)

.wxq-main--left
	float: left
	height: 100%
	width: $wxqLeftWidth


.wxq-left--bg
	box-sizing: border-box
	height: 100%
	width: 100%
	padding 169px 40px 0 50px
	background-image: url($bg-url('/images/wxq/bg.png'))
	background-position: 0 100px
	background-repeat: no-repeat
.wxq-left--content
	height: 843px
	padding-left 20px
	padding-right: 20px
	overflow: hidden



.wxq-signin--total
	overflow: hidden
	padding-top: 22px
	padding-bottom: 22px
	border-bottom: 2px solid #59f9ff
	line-height: 74px
	
.total-txt
	float: left
	font-size: 4.5em
	color #fff
.total-amount
	float left
.total-card
	float: left
	// box-sizing: border-box
	width: 50px
	height: 74px
	margin: 0 6px
	border: 2px solid rgba(103,207,255,.65)
	box-shadow: 0 0 8px rgba(89, 237, 255,.75)
	border-radius: 4px
	overflow: hidden
	&:nth-child(3n+1)
		.card-figure
			transition-duration(.3s)
			transition-delay(.3s)
	&:nth-child(3n+2)
		.card-figure
			transition-duration(.3s)
			transition-delay(.15s)
	&:nth-child(3n+3)
		.card-figure
			transition-duration(.3s)	
.card-figure
	display: block
	height: 100%
	text-align: center
	font-size: 6.8em
	color #75faff
	transition(margin-top .3s ease-out)


.card-figure__is-shift
	margin-top: -74px

	

$enteredLeftWidth = 192px
.entered-employee--item
	margin: 26px 0
	overflow: hidden

.employee-item__insert
	animation(signinRecordInsert .5s)

.entered-employee--left
	float: left
	width: $enteredLeftWidth
.entered-employee--right
	margin-left: $enteredLeftWidth

.entered-avatar
	margin: 0 auto

.entered-txt
	font-size: 4.6em
	color #fff



.wxq-main--right
	height: 100%
	margin-left: $wxqLeftWidth
.wxq-right--content
	box-sizing: border-box
	height: 100%
	padding-top: 164px
	padding-bottom 65px
	// overflow: hidden
	// height: 100%
	// padding-top: 130px
	// transform(translateX(-36px))

.wxq-chat
	height: 100%
	// overflow: hidden
.chat-item
	position: relative
	height: 191px
	padding-right: 42px
	// margin: 31px 0;
	margin-bottom: 30px	
	// overflow: hidden
	background-image: url($bg-url('/images/wxq/chat-frame2.png'))
	background-repeat: no-repeat
	background-position: 0 0
	line-height 191px
	&:last-child
		margin-bottom: 0


.chat-item__insert
	animation(cardRecordInsert .5s)
	


.chat-item--left
	float: left
	// width: 435px

.chat-avatar
	float: left
	margin-left: 50px
	margin-right: 30px
	margin-top: 24px
.chat-name
	display none
	float: left
	font-size: 4.6em
	color #fff
.chat-item--right
	padding-right 18px
	margin-left: 240px
	// float: left
	// margin-left: 435px
.chat-content
	box-sizing: border-box
	display: block
	width: 100%
	height: 191px
	vertical-align: middle
	font-size: 4.6em
	color #fff
	line-height @height
	overflow: hidden
	white-space: nowrap
	s('text-overflow: ellipsis;')
	text-overflow: ellipsis
	$text-overflow()
	
.chat-face
	width: 60px
	height: 60px
	vertical-align: middle


.card-light__chat-top
	top: -125px
	right: -270px
.card-light__chat-right
	bottom: -100px
	right: -20px
.card-light__chat-bottom
	bottom: -135px
	left: -700px
.card-light__chat-left
	top: -105px
	left: -60px


.employee-avatar
	width: 148px
	height: 146px
	background-image: url($bg-url('/images/wxq/avatar-frame.png'))
	background-position: 50% 50%
	background-repeat: no-repeat
	text-align: center
	line-height @height
	// margin: 0 auto
	img
		border-radius: 50%
		height: 124px
		width: 124px
		margin-top: -3px
		vertical-align: middle


@keyframes cardShift
	0%
		margin-top: 0
	100%
		margin-top: -74px


@keyframes cardRecordInsert
	0%
		transform(translateY(500%))
	100%
		transform(translateY(0%))


@keyframes signinRecordInsert
	0%
		transform(translateY(-230%))
	100%
		transform(translateY(0%))


@keyframes hide-wxq-left
	0%
		transform(translateX(0))
	100%
		transform(translateX(-200%))
		
@keyframes middle-wxq-right
	0%
		transform(translateX(0))
	100%
		transform(translateX(-($wxqLeftWidth/2)))