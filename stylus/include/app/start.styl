.start-show
	position: relative
	height: 100%
	width: 100%
.start-show--subtitles
	height: 100%
	width: 100%
	// margin: 0 auto
	background: url($bg-url('/images/start/subtitles.png')) 50% 78% no-repeat
	animation(start-title-show .5s ease-out)

.start-show--player
	display: table-cell
	width: $siteWidth
	height: $siteHeight
	color #f00
	text-align: center
	vertical-align: middle
	line-height: 2
	span
		display: block
		&:first-child
			font-size: 15em
		&:last-child
			font-size 6em




.start-show--decoration
	position: absolute
	top 0
	right: 0
	width: 100%
	height: 100%
	pointer-events: none
.decoration-peach-1
	position: absolute
	right 0
	top 85px
	width: 134px
	height: 187px
	background: url($bg-url('/images/start/peach-1.png')) 0 0 no-repeat
	z-index: 4
.decoration-peach-2
	position: absolute
	top 0
	right 0
	width: 457px
	height: 279px
	background: url($bg-url('/images/start/peach-2.png')) 0 0 no-repeat
	z-index 2

.decoration-lantern-1
	position: absolute
	top 36px
	right 49px
	width: 155px
	height: 433px
	background: url($bg-url('/images/start/lantern-1.png')) 0 0 no-repeat
	z-index: 3
	transform-origin: 100% 0
	animation(swing-1 25s infinite alternate linear .2s)
	
.decoration-lantern-2
	position: absolute
	top 77px
	right 180px
	width: 155px
	height: 378px
	background: url($bg-url('/images/start/lantern-2.png')) 0 0 no-repeat
	z-index 1

.decoration-blessing-1
	position: absolute
	left 50%
	bottom 230px
	width: 283px
	height: 65px
	background: url($bg-url('/images/start/blessing-1.png')) 0 0 no-repeat



@keyframes swing-1
	0%
		transform(rotate(0))
	5%
		transform(rotate(3deg))
	10%
		transform(rotate(-3deg))
	15%
		transform(rotate(3deg))
	20%
		transform(rotate(-3deg))
	25%
		transform(rotate(3deg))
	40%
		transform(rotate(3deg))
	45%
		transform(rotate(-3deg))
	50%
		transform(rotate(3deg))
	55%
		transform(rotate(-3deg))
	60%
	75%
		transform(rotate(-3deg))
	80%
		transform(rotate(3deg))
	85%
		transform(rotate(-3deg))
	90%
		transform(rotate(3deg))
	95%
		transform(rotate(-3deg))
	100%
		transform(rotate(3deg))


@keyframes start-title-show
	0%
		transform(scale(0))
	100%
		transform(scale(1))