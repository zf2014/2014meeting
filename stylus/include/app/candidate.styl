.candidate-content
	position: relative
	height: 100%
	width: 100%
	
.carousel
	position: relative
	width: 434px
	height: 437px
	margin: 18% auto 0 


.carousel-3d
	perspective: 5000px
	perspective-origin: 50% -20%

	.carousel-cards
		position: absolute
		width: 100%
		height: 100%
		transform-style: preserve-3d
		transform rotateY(0deg)
		transition transform 1.5s ease-out .5s


	.carousel-card
		position: absolute
		display: block
		width: 100%
		height: 100%
		// border: 2px solid #cbf6ff
		&:nth-child(1)
			transform: rotateY(unit((1-1)*45, 'deg')) translateZ(650px);
		&:nth-child(2)
			transform: rotateY(unit((2-1)*45, 'deg')) translateZ(650px);
		&:nth-child(3)
			transform: rotateY(unit((3-1)*45, 'deg')) translateZ(650px);
		&:nth-child(4)
			transform: rotateY(unit((4-1)*45, 'deg')) translateZ(650px);
		&:nth-child(5)
			transform: rotateY(unit((5-1)*45, 'deg')) translateZ(650px);
		&:nth-child(6)
			transform: rotateY(unit((6-1)*45, 'deg')) translateZ(650px);
		&:nth-child(7)
			transform: rotateY(unit((7-1)*45, 'deg')) translateZ(650px);
		&:nth-child(8)
			transform: rotateY(unit((8-1)*45, 'deg')) translateZ(650px)	

.candidate-box
	box-sizing: border-box
	width: 434px
	height: 437px
	padding: 20px
	background: url($bg-url('/images/candidate/photo-frame.png')) 50% 50% no-repeat

.candidate-photo
	box-sizing: border-box
	display: block
	width: 100%
	height: 100%
	padding-top: 10px
	padding-bottom: 10px
	text-align: center
	background-color: #fff
	border-radius: 6px
	img
		max-width: 100%
		height: 100%
	
.candidate-name
	position: relative
	bottom 78px
	color #fff
	line-height: 78px
	background-color: rgba(1,58,153,.8)
	text-align: center
	font-size: 3.8em
	border-bottom-right-radius: 6px
	border-bottom-left-radius: 6px

.card-light__carousel-top
	top: -125px
	right: -270px
.card-light__carousel-right
	bottom 55px
	right -45px
.card-light__carousel-bottom
	bottom: -135px
	left: -650px
.card-light__carousel-left
	top: 55px
	left: -60px





.candidate-show
	height: 100%
	width: 100%

.show-rank
	position: absolute
	left 50%
	bottom: 0
	width: 1613px
	min-height: 312px
	margin-left: -(@width/2)
	// margin: 0 auto
	background-image: url($bg-url('/images/candidate/podium.png'))
	background-repeat: no-repeat
	background-position: 0 100%

.show-rank--bar
	position: absolute
	box-sizing: border-box
	bottom 218px
	// float: left
	width 222px
	height: 190px
	min-height: 190px
	// background-color: red
	border-width: 3px
	border-style: solid
	border-color: transparent #fff
	box-shadow: s('12px -2px 40px rgba(255,255,255,0.85), -12px -2px 40px rgba(255,255,255,0.85)')
	// transition(height 20s)
	&:nth-child(1)
		left: 343px
		background-color: #adc1c9
		&:before
			border-bottom-color: @background-color
	&:nth-child(2)
		left: 710px
		background-color: #f6cf7e
		&:before
			border-bottom-color: @background-color
	&:nth-child(3)
		left: 1058px
		background-color: #e9cbb6
		&:before
			border-bottom-color: @background-color
	
	&:before
		content: ''
		position: absolute
		z-index: 2
		top -320px
		left -49px
		display block
		width: 0
		height: 0
		border-width: 160px
		border-style: solid
		border-color: transparent transparent transparent transparent
	
	&:after
		content: ''
		position: absolute
		z-index: 1
		top -329px
		left -53px
		display block
		width: 0
		height: 0
		border-width: 164px
		border-style: solid
		border-color: transparent transparent #fff transparent
		// box-shadow: 0 0 16px rgba(255,255,255)
		
.show-rank--photo
	position: absolute
	bottom -3px
	left 0
	img
		display block
		width: 216px
		height: 158px
		vertical-align: top

.show-rank--votes
	position: absolute
	top: -85px
	left 0
	width: 100%
	z-index: 9
	font-weight: 700
	color #c6974b
	font-size: 7em
	text-align: center
	span
		&:first-child
			margin-right: 5px


.show-rank--name
	position: absolute
	bottom: -145px
	left 0
	width: 154%
	margin-left: -27%
	font-size: 3em
	font-weight: 700
	line-height: 1.6
	> span
		display block
		text-align: center
		&:first-child
			font-size: 1.2em


.show-rank--static
	bottom 20%
	.show-rank--bar
		min-height: 160px
		height: 160px
		&:before
		&:after
			display none
	.show-rank--votes
		top 194px
		color rgb(32, 30, 33)
	
	.show-name
		display: block
		width: 140%
		margin-left: -20%
		font-size: 0.4em